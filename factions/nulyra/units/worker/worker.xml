<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="500" regeneration="2"/>
		<max-ep value="0"/>
		<armor value="0"/>
		<armor-type value="normal"/>					
		<sight value="15"/>
		<time value="40"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="150"/>
			<resource name="food" amount="1"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="images/workerimg.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/worker_select1.wav"/>
			<sound path="sounds/worker_select2.wav"/>
			<sound path="sounds/worker_select3.wav"/>
			<sound path="sounds/worker_select4.wav"/>
			<sound path="sounds/worker_select5.wav"/>					
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/worker_ack1.wav"/>
			<sound path="sounds/worker_ack2.wav"/>
			<sound path="sounds/worker_ack3.wav"/>
				
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="25"/>
			<animation path="/support/stand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_loaded_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="90"/>
			<animation path="/support/goldgrab.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_loaded_wood_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="90"/>
			<animation path="/support/oilgrab.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="190"/>
			<anim-speed value="110"/>
			<animation path="/support/run.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_wood_skill"/>		
			<ep-cost value="0"/>
			<speed value="210"/>
			<anim-speed value="110"/>
			<animation path="/support/run.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_gold_skill"/>		
			<ep-cost value="0"/>
			<speed value="210"/>
			<anim-speed value="110"/>
			<animation path="/support/run.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_loaded_skill"/>		
			<ep-cost value="0"/>
			<speed value="190"/>
			<anim-speed value="110"/>
			<animation path="/support/goldcarry.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_loaded_wood_skill"/>		
			<ep-cost value="0"/>
			<speed value="190"/>
			<anim-speed value="110"/>
			<animation path="/support/oilcarry.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="build"/>
			<name value="build_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="100"/>
			<animation path="/support/build.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>	
		
		<skill>
			<type value="harvest"/>
			<name value="mine_skill"/>		
			<ep-cost value="0"/>
			<speed value="225"/>
			<anim-speed value="90"/>
			<animation path="/support/harvest.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/drill.wav"/>

			</sound>
		</skill>	
		

		<skill>
			<type value="harvest"/>
			<name value="oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="225"/>
			<anim-speed value="90"/>
			<animation path="/support/oilharvest.g3d"/>
			<sound enabled="false"/>

		</skill>	

		
		<skill>
			<type value="repair"/>
			<name value="repair_skill"/>		
			<ep-cost value="0"/>
			<speed value="40"/>
			<anim-speed value="120"/>
			<animation path="/support/build.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>		
	
		<skill>
			<type value="repair"/>
			<name value="fix_skill"/>		
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="120"/>
			<animation path="/support/build.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="repair"/>
			<name value="heal_skill"/>		
			<ep-cost value="0"/>
			<speed value="800"/>
			<anim-speed value="60"/>
			<animation path="/support/heal.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="60"/>
			<animation path="/support/shoot.g3d"/>
				<particles value="true" start-time="0.01" end-time="0.11">	
				<particle-file path="cannon_particles.xml"/>
				</particles>
			<sound enabled="true" start-time="0.1">
				<sound-file path="/sounds/scout_attack.wav"/>

			</sound>

			<attack-strenght value="70"/>
			<attack-var value="50"/>
			<attack-range value="11"/>
			<attack-type value="worker"/>	
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.1"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/bullet_hit.wav"/>

				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>
		
	
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="90"/>
			<anim-speed value="90"/>
			<animation path="/support/die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/worker_die1.wav"/>
				<sound-file path="sounds/worker_die2.wav"/>								
			</sound>			
			<fade value="false"/>
		</skill>						

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value= "build"/>
			<name value="build_basic"/>
			<image path="images/worker_build_basic.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>
                <building name="house"/>
				<building name="barracks"/>
				<building name="hangar"/>
				<building name="citadel"/>
				<building name="storage"/>
				<building name="pillbox"/>	


			
			</buildings>
			<start-sound enabled="false"/>
			<built-sound enabled="true">
				<sound-file path="sounds/worker_ack2.wav"/>
				<sound-file path="sounds/worker_ack2.wav"/>
				<sound-file path="sounds/worker_ack2.wav"/>							
			</built-sound>	
		</command>


		<command>
			<type value="harvest"/>
			<name value="mine"/>
			<image path="images/harvest.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_gold_skill"/>
			<harvest-skill value="mine_skill"/>
			<stop-loaded-skill value="stop_loaded_skill"/>
			<move-loaded-skill value="move_loaded_skill"/>
			<harvested-resources>
				<resource name="gold"/>										
			</harvested-resources>
			<max-load value="30"/>
			<hits-per-unit value="1"/>				
		</command>


		<command>
			<type value="harvest"/>
			<name value="pump"/>
			<image path="images/oil.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_gold_skill"/>
			<harvest-skill value="oil_skill"/>
			<stop-loaded-skill value="stop_loaded_wood_skill"/>
			<move-loaded-skill value="move_loaded_wood_skill"/>
			<harvested-resources>
				<resource name="oil"/>										
			</harvested-resources>
			<max-load value="30"/>
			<hits-per-unit value="1"/>				
		</command>

		
		<command>
			<type value="repair"/>
			<name value="repair"/>
			<image path="images/worker_repair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="repair_skill"/>
			<repaired-units>
				<unit name="house"/>		
				<unit name="barracks"/>		
				<unit name="hangar"/>													
				<unit name="castle"/>
				<unit name="citadel"/>
				<unit name="storage"/>
				<unit name="pillbox"/>					
			</repaired-units>		
		</command>
	
		<command>
			<type value="repair"/>
			<name value="repair_tank"/>
			<image path="images/tankrepair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="fix_skill"/>
			<repaired-units>
				<unit name="dozer"/>
				<unit name="assault"/>
				<unit name="prince_a_a"/>
				<unit name="marauder"/>
				<unit name="monarch"/>						
			</repaired-units>		
		</command>


		<command>
			<type value="repair"/>
			<name value="heal"/>
			<image path="images/heal.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="heal_skill"/>
			<repaired-units>
				<unit name="militia"/>
				<unit name="ballista"/>
				<unit name="crossbow"/>
				<unit name="worker"/>
				<unit name="bishop"/>		
			</repaired-units>		
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../castle/images/gun.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	

	</commands>
</unit>