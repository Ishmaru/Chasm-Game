<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="4" />
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="20" />
		<armor-type value="structure"/>
		<sight value="6" />
		<time value="100" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1111"/>
			<row value="1111"/>
			<row value="1111"/>
			<row value="1111"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="500" />
		</resource-requirements>
		<resources-stored />
		<image path="images/hangar.bmp" />
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="true" image-path="images/meetingpoint.bmp"/>
		<selection-sounds enabled="true">
			<sound path="sounds/steammach.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/steammach.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>
		<!-- *** skill 0 *** -->
		<skill>
			<type value="stop"/>	
			<name value="stop_skill"/>
			<ep-cost value="0" />
			<speed value="50" />
			<anim-speed value="10" />
			<animation path="hangar.g3d" />
			<sound enabled="false" />
		</skill>
		
		<!-- *** skill 1 *** -->
		<skill>
			<type value="be_built" />	
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="10" />
			<animation path="hangarbuild.g3d" />
			<sound enabled="false" />
		</skill>	
		
		
		
		<!-- *** skill 3 *** -->
		<skill>
			<type value="produce"/>
			<name value="advance_skill"/>	
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="10" />
			<animation path="hangar.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<!-- *** skill 4 *** -->
		<skill>
			<type value="die" />	
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="50" />
			<animation path="dead/hangardie.g3d" />
			<sound enabled="true" start-time="0">
				<sound-file path="/sounds/tech_building_fall4.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="produce"/>
			<name value="deploy_baloon" />
			<image path="../baloon/images/baloon.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="advance_skill"/>
			<produced-unit name="baloon"/>
		</command>
		
		<command>
			<type value="produce"/>
			<name value="deploy_cargo_ship" />
			<image path="../cargo_ship/images/baloon.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="advance_skill"/>
			<produced-unit name="cargo_ship"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="deploy_fighter" />
			<image path="../fighter/images/fighter.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="advance_skill"/>
			<produced-unit name="fighter"/>
		</command>
		
	</commands>
</unit>