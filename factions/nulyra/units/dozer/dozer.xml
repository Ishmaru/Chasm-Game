<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="3"/>
		<max-hp value="1500" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="0"/>
		<armor-type value="armored"/>					
		<sight value="15"/>
		<time value="100"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="400"/>
			<resource name="oil" amount="50"/>
			<resource name="food" amount="1"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="images/dozer.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/malea_select1.wav"/>
			<sound path="sounds/malea_select2.wav"/>
			<sound path="sounds/malea_select3.wav"/>
			<sound path="sounds/malea_select4.wav"/>
			<sound path="sounds/malea_select5.wav"/>					
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/malea_ack1.wav"/>
			<sound path="sounds/malea_ack2.wav"/>
			<sound path="sounds/malea_ack3.wav"/>
			<sound path="sounds/malea_ack4.wav"/>				
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="25"/>
			<animation path="/dozer/dozerstand.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/engine.wav"/>
			</sound>
		</skill>
		


		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="260"/>
			<anim-speed value="35"/>
			<animation path="/dozer/dozerrun.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/enginemoving.wav"/>
			</sound>
		</skill>



		<skill>
			<type value="build"/>
			<name value="build_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="20"/>
			<animation path="/dozer/dozerbuild.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>	
		
	

		
		<skill>
			<type value="repair"/>
			<name value="repair_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="20"/>
			<animation path="/dozer/dozerbuild.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>		

		<skill>
			<type value="repair"/>
			<name value="repair_tank_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="20"/>
			<animation path="/dozer/dozerbuild.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/worker_build1.wav"/>
				<sound-file path="sounds/worker_build2.wav"/>
				<sound-file path="sounds/worker_build3.wav"/>
			</sound>
		</skill>	

		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="30"/>
			<animation path="/dozer/dozerdie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/worker_die1.wav"/>
				<sound-file path="sounds/worker_die2.wav"/>								
			</sound>			
			<fade value="false"/>
		</skill>						

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value= "build"/>
			<name value="build"/>
			<image path="images/worker_build_basic.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>
                <building name="house"/>
				<building name="barracks"/>
				<building name="hangar"/>
                <building name="citadel"/>
                <building name="storage"/>
                <building name="pillbox"/>
                <building name="castle"/>			
			</buildings>
			<start-sound enabled="false"/>
			<built-sound enabled="false"/>							
		</command>

		
		<command>
			<type value="repair"/>
			<name value="repair"/>
			<image path="images/worker_repair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="repair_skill"/>
			<repaired-units>
				<unit name="house"/>		
				<unit name="barracks"/>	
				<unit name="hangar"/>								
				<unit name="pillbox"/>						
				<unit name="castle"/>
				<unit name="citadel"/>
				<unit name="storage"/>								
			</repaired-units>		
		</command>
	
		<command>
			<type value="repair"/>
			<name value="repair_tank"/>
			<image path="images/tankrepair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="repair_tank_skill"/>
			<repaired-units>
				<unit name="dozer"/>
				<unit name="assault"/>	
				<unit name="prince_a_a"/>	
				<unit name="marauder"/>	
				<unit name="monarch"/>				
			</repaired-units>		
		</command>
	</commands>
</unit>