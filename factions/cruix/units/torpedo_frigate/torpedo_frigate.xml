<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="1"/>
		<max-hp value="3000" regeneration="8"/>
		<max-ep value="20" regeneration="1"/>
		<armor value="30"/>			
		<armor-type value="air"/>
		<sight value="20"/>
		<time value="150"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="veteran" kills="15"/>
			<level name="elite" kills="45"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
			<light enabled="false"/>
		<unit-requirements>
			<unit name="plant" />
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="800"/>
			<resource name="oil" amount="500"/>
                        <resource name="food" amount="8"/>					
		</resource-requirements>
		<resources-stored/>
		<image path="images/torpedo.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="/sounds/gunship_select1.wav"/>
			<sound path="/sounds/gunship_select2.wav"/>
			<sound path="/sounds/gunship_select3.wav"/>
			<sound path="/sounds/gunship_select4.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="/sounds/gunship_ack1.wav"/>
			<sound path="/sounds/gunship_ack2.wav"/>
			<sound path="/sounds/gunship_ack3.wav"/>
			<sound path="/sounds/gunship_ack4.wav"/>
			<sound path="/sounds/gunship_ack5.wav"/>
			<sound path="/sounds/gunship_ack6.wav"/>
			<sound path="/sounds/gunship_ack7.wav"/>		
		</command-sounds>

	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="20"/>
			<animation path="torpedo/shiprun.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/idle.wav"/>
			</sound>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="125"/>
			<anim-speed value="100"/>
			<animation path="torpedo/shiprun.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/fly.wav"/>
			</sound> 
		</skill>
                
        <skill>
			<type value="attack"/>
			<name value="air_skill"/>		
			<ep-cost value="20"/>
			<speed value="100"/>
			<anim-speed value="200"/>
			<animation path="torpedo/shipshoot.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/torpedo.wav"/>
			</sound>
			<attack-strenght value="300"/>
			<attack-var value="100"/>
			<attack-range value="17"/>
			<attack-type value="antiair"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="torpedo_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/gunship_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="torpedo_splash.xml"/>

			</splash>
		</skill>	

        <skill>
			<type value="attack"/>
			<name value="land_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="220"/>
			<animation path="torpedo/shipshoot.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/heavy_vulcan.wav"/>
			</sound>
			<attack-strenght value="120"/>
			<attack-var value="80"/>
			<attack-range value="8"/>
			<attack-type value="vulcan"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj2.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/gunship_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>			
		
		
        <skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="30"/>
			<animation path="torpedo/shipdie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/gunship_die1.wav"/>
				<sound-file path="sounds/gunship_die2.wav"/>
				<sound-file path="sounds/gunship_die3.wav"/>
			</sound>
                        <fade value="false"/>
		</skill>

	</skills>
	
	<commands>
		
                <command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
                
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>
              
        <command>
			<type value="attack"/>
			<name value="anti_air"/>
			<image path="../castle/images/antiair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="air_skill"/>
		</command>

        <command>
			<type value="attack"/>
			<name value="land_attack"/>
			<image path="../castle/images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="land_skill"/>
		</command>			
		
        <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../castle/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="air_skill"/>
		</command>



	</commands>
</unit>