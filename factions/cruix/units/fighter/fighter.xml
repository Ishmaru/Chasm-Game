<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="1"/>
		<max-hp value="1200" regeneration="1"/>
		<max-ep value="4" regeneration="1"/>
		<armor value="10"/>	
		<armor-type value="air"/>
		<sight value="20"/>
		<time value="35"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="veteran" kills="2"/>
			<level name="elite" kills="4"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
			<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="350"/>
			<resource name="oil" amount="100"/>
                        <resource name="food" amount="2"/>					
		</resource-requirements>
		<resources-stored/>
		<image path="images/fighter.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="/sounds/gunship_select1.wav"/>
			<sound path="/sounds/gunship_select2.wav"/>
			<sound path="/sounds/gunship_select3.wav"/>
			<sound path="/sounds/gunship_select4.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="/sounds/gunship_ack1.wav"/>
			<sound path="/sounds/gunship_ack2.wav"/>
			<sound path="/sounds/gunship_ack3.wav"/>
			<sound path="/sounds/gunship_ack4.wav"/>
			<sound path="/sounds/gunship_ack5.wav"/>
			<sound path="/sounds/gunship_ack6.wav"/>
			<sound path="/sounds/gunship_ack7.wav"/>		
		</command-sounds>

	</parameters>


	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="25"/>
			<animation path="fighter/fighterrun.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/idle.wav"/>
			</sound> 
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="50"/>
			<animation path="fighter/fighterrun.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/fly.wav"/>
			</sound> 
		</skill>
                


                <skill>
			<type value="attack"/>
			<name value="air_skill"/>		
			<ep-cost value="0"/>
			<speed value="130"/>
			<anim-speed value="450"/>
			<animation path="fighter/fightershoot.g3d"/>
				<particles value="true">	
				<particle-file path="cannon_particles.xml"/>
				</particles>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/gunship_attack1.wav"/>
			</sound>
			<attack-strenght value="65"/>
			<attack-var value="65"/>
			<attack-range value="11"/>
			<attack-type value="antiair"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj2.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/bullet_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash2.xml"/>

			</splash>

		</skill>	

                <skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="30"/>
			<animation path="fighter/fighterdie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/gunship_die1.wav"/>
				<sound-file path="sounds/gunship_die2.wav"/>
				<sound-file path="sounds/gunship_die3.wav"/>
			</sound>
                        <fade value="false"/>
		</skill>

         <skill>
			<type value="attack"/>
			<name value="bomb_skill"/>		
			<ep-cost value="4"/>
			<speed value="100"/>
			<anim-speed value="100"/>
			<animation path="fighter/fighterrun.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/bomb.wav"/>
			</sound>
			<attack-strenght value="100"/>
			<attack-var value="50"/>
			<attack-range value="1"/>
			<attack-type value="bombard"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/bullet_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>

	</skills>
	
	<commands>
		
                <command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
                
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

        
              

                <command>
			<type value="attack"/>
			<name value="gun"/>
			<image path="../castle/images/antiair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="air_skill"/>
		</command>

                <command>
			<type value="attack"/>
			<name value="bomb"/>
			<image path="../castle/images/bomb.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="bomb_skill"/>
		</command>

                <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../castle/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="air_skill"/>
		</command>

	</commands>
</unit>