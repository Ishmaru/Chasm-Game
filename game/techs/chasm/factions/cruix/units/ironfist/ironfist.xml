<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="4"/>
		<max-hp value="2400" regeneration="1"/>
		<max-ep value="16" regeneration="1"/>
		<armor value="20"/>	
		<armor-type value="armored"/>				
		<sight value="15"/>
		<time value="40"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="3"/>

		</levels>
		<fields>
			<field value="land"/>
			<field value="air"/>
		</fields>
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="plant" />
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="100"/>
			<resource name="oil" amount="50"/>
			<resource name="food" amount="4"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/ironfist.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/vulcantank_select1.wav"/>
			<sound path="sounds/vulcantank_select2.wav"/>
			<sound path="sounds/vulcantank_select3.wav"/>
			<sound path="sounds/vulcantank_select4.wav"/>	
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/vulcantank_ack1.wav"/>	
			<sound path="sounds/vulcantank_ack2.wav"/>	
			<sound path="sounds/vulcantank_ack3.wav"/>	
			<sound path="sounds/vulcantank_ack4.wav"/>	
			<sound path="sounds/vulcantank_ack5.wav"/>	
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="5"/>
			<animation path="ironfist/tankstand.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="/sounds/engine.wav"/>
			</sound>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="260"/>
			<anim-speed value="35"/>
			<animation path="ironfist/tankrun.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="/sounds/enginemoving.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="50"/>
			<animation path="ironfist/tankcannonshoot.g3d"/>
			    <particles value="true" start-time="0.1" end-time="0.2">	
				<particle-file path="cannon_particles.xml"/>
				</particles>
			<sound enabled="true" start-time="0.1">
				<sound-file path="/sounds/vulcantank_attack.wav"/>

			</sound>
			<attack-strenght value="100"/>
			<attack-var value="50"/>
			<attack-range value="8"/>
			<attack-type value="heavy"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="land"/>

			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/bullet_hit.wav"/>

				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="rocket_skill"/>		
			<ep-cost value="8"/>
			<speed value="300"/>
			<anim-speed value="600"/>
			<animation path="ironfist/tankmissles.g3d"/>
			<sound enabled="true" start-time="0.1">
				<sound-file path="/sounds/missle_.wav"/>
			</sound>
			<attack-strenght value="90"/>
			<attack-var value="40"/>
			<attack-range value="13"/>
			<attack-type value="firebomb"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="land"/>

			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj2.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/bullet_hit.wav"/>

				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash2.xml"/>

			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="sabredie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/catapult_die1.wav"/>
				<sound-file path="sounds/catapult_die2.wav"/>
				<sound-file path="sounds/catapult_die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>





	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../castle/images/antitank.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="rocket"/>
			<image path="../castle/images/missle.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="rocket_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../castle/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>


		
	</commands>
</unit>