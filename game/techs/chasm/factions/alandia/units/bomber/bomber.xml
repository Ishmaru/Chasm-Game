<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="1"/>
		<max-hp value="2000" regeneration="1"/>
		<max-ep value="12" regeneration="1"/>
		<armor value="20"/>	
		<armor-type value="air"/>
		<sight value="20"/>
		<time value="60"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="veteran" kills="8"/>
			<level name="elite" kills="12"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
			<light enabled="false"/>
		<unit-requirements>
			<unit name="armory" />
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="600"/>
			<resource name="oil" amount="300"/>
                        <resource name="food" amount="5"/>					
		</resource-requirements>
		<resources-stored/>
		<image path="images/gunship.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="/sounds/gunship_select1.wav"/>
			<sound path="/sounds/gunship_select2.wav"/>
			<sound path="/sounds/gunship_select3.wav"/>
			<sound path="/sounds/gunship_select4.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="/sounds/gunship_ack1.wav"/>
			<sound path="/sounds/gunship_ack2.wav"/>
			<sound path="/sounds/gunship_ack3.wav"/>
			<sound path="/sounds/gunship_ack4.wav"/>
			<sound path="/sounds/gunship_ack5.wav"/>
			<sound path="/sounds/gunship_ack6.wav"/>
			<sound path="/sounds/gunship_ack7.wav"/>		
		</command-sounds>

	</parameters>


	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="30"/>
			<animation path="gunshipstand.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/idle.wav"/>
			</sound>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="450"/>
			<anim-speed value="60"/>
			<animation path="gunshipfly.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/fly.wav"/>
			</sound> 
		</skill>
                
                <skill>
			<type value="attack"/>
			<name value="arrow_skill"/>		
			<ep-cost value="6"/>
			<speed value="200"/>
			<anim-speed value="600"/>
			<animation path="gunshipbomb.g3d"/>	
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/bomb.wav"/>
			</sound>
			<attack-strenght value="120"/>
			<attack-var value="50"/>
			<attack-range value="1"/>
			<attack-type value="bombard"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/gunship_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>	

                <skill>
			<type value="attack"/>
			<name value="air_skill"/>				
			<ep-cost value="0"/>
			<speed value="130"/>
			<anim-speed value="400"/>
			<animation path="gunshipgun.g3d"/>
				<particles value="true">	
				<particle-file path="cannon_particles.xml"/>
				</particles>	
			<sound enabled="true" start-time="0.1">
				<sound-file path="sounds/gunship_attack1.wav"/>
			</sound>
			<attack-strenght value="35"/>
			<attack-var value="35"/>
			<attack-range value="13"/>
			<attack-type value="antiair"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj2.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/bullet_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash2.xml"/>

			</splash>

		</skill>	

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="85" />
			<anim-speed value="26" />
			<animation path="gunshippara.g3d" />
			<sound enabled="false" />
		</skill>

                <skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="30"/>
			<animation path="gunshipdie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/gunship_die1.wav"/>
				<sound-file path="sounds/gunship_die2.wav"/>
				<sound-file path="sounds/gunship_die3.wav"/>
			</sound>
                        <fade value="false"/>
		</skill>

	</skills>
	
	<commands>
		
                <command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
                
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

        
                <command>
			<type value="attack"/>
			<name value="missile"/>
			<image path="../castle/images/bomb.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="arrow_skill"/>
		</command>
              

                <command>
			<type value="attack"/>
			<name value="gun"/>
			<image path="../castle/images/antiair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="air_skill"/>
		</command>

                <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../castle/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="arrow_skill"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="deploy_special_ops" />
			<image path="images/paradrop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="paratrooper"/>
		</command>

	</commands>
</unit>