<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="600" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="0"/>	
		<armor-type value="light"/>				
		<sight value="15"/>
		<time value="25"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="experenced" kills="4"/>
			<level name="veteran" kills="8"/>
			<level name="elite" kills="12"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements>
						<unit name="citadel" />
		</unit-requirements>

		<upgrade-requirements/>

		<resource-requirements>
			<resource name="gold" amount="450"/>
			<resource name="oil" amount="50"/>
			<resource name="food" amount="3"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/fieldgun.bmp"/>
		<image-cancel path="../castle/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/vulcantank_select1.wav"/>
			<sound path="sounds/vulcantank_select2.wav"/>
			<sound path="sounds/vulcantank_select3.wav"/>
			<sound path="sounds/vulcantank_select4.wav"/>	
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/vulcantank_ack1.wav"/>	
			<sound path="sounds/vulcantank_ack2.wav"/>	
			<sound path="sounds/vulcantank_ack3.wav"/>	
			<sound path="sounds/vulcantank_ack4.wav"/>	
			<sound path="sounds/vulcantank_ack5.wav"/>	
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="fieldgunstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="140"/>
			<anim-speed value="80"/>
			<animation path="fieldgunmove.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="30"/>
			<animation path="fieldgunshoot.g3d"/>
				<particles value="true" start-time="0.3" end-time="0.5">	
				<particle-file path="cannon_particles.xml"/>
				</particles>
			<sound enabled="true" start-time="0.3">
				<sound-file path="/sounds/vulcantank_attack.wav"/>

			</sound>
			<attack-strenght value="125"/>
			<attack-var value="50"/>
			<attack-range value="15"/>
			<attack-type value="heavy"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/bullet_hit.wav"/>

				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="fieldgundie.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/catapult_die1.wav"/>
				<sound-file path="sounds/catapult_die2.wav"/>
				<sound-file path="sounds/catapult_die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../castle/images/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../castle/images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../castle/images/antitank.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../castle/images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
	</commands>
</unit>